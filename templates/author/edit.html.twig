{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow">
                    <h2 class="card-header text-center">Modifier un auteur</h2>
                    <div class="card-body">
                        <form action="{{path('edit_author', {'id':author.id})}}" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{ author.name }}" placeholder="Entrer le nom complet"  autocomplete="off">
                            </div>
                            <div class="mybtn w-50">
                                <button type="submit" class="btn btn-outline-primary btn-sm" name="save">Update</button>
                                <a href="{{path('list_author')}}"  class="btn btn-outline-danger btn-sm" name="cancel" >Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}