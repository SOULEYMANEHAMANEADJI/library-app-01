{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="card shadow">
                    <h2 class="card-header text-center">List Authors</h2>
                    <div class="card-body">
                        <div class="mybtn w-70">
                            <a href="{{path('app_author')}}" class="btn btn-outline-success btn-sm mb-3">Add</a>
                            <table class="table table-striped table-hover table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for author in authors %}
                                        <tr>
                                            <td>{{ author.id }}</td>
                                            <td>{{ author.name }}</td>
                                            <td>
                                                <a href="{{ path('edit_author', {'id': author.id}) }}" class="btn btn-outline-warning btn-sm">Edit</a>
                                                <a href="{{ path('delete_author', {'id': author.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}